# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[**/*.ts]
indent_style = tab
indent_size = 4
max_line_length = 111

[**.{md, yaml, json}]
indent_style = space
indent_size = 2

[**.md]
trim_trailing_whitespace = false
